<Window
    x:Class="AppliNicolas.Fenetre.FicheClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppliNicolas.Fenetre"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="___Aucun_nom_"
    Title="FicheClient"
    Width="300"
    Height="300"
    Background="Beige"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Button
                x:Name="ButRetour"
                Width="70"
                Height="20"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ButRetour_Click"
                Content="⬅ Retour"
                Style="{StaticResource BoutonArrondi}" />
            <StackPanel Margin="0,35,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="45"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="Nom :"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TxtBoxNom"
                    Width="150"
                    Height="20"
                    Margin="30,0,0,0"
                    Text="{Binding NomClient, ValidatesOnExceptions=True}" />
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="60"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="Prénom :"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TxtBoxPrenomClient"
                    Width="150"
                    Height="20"
                    Margin="15,0,0,0"
                    Text="{Binding PrenomClient, ValidatesOnExceptions=True}" />
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="40"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="Mail :"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TxtBoxMailClient"
                    Width="150"
                    Height="20"
                    Margin="35,0,0,0"
                    Text="{Binding MailClient, ValidatesOnExceptions=True}" />
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="Numéro Client :"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="TxtBlockNumClient"
                    Width="40"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    Background="White"
                    Text="{Binding NumClient}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                <Button
                    x:Name="ButValider"
                    Width="157"
                    Margin="15,0,0,0"
                    Click="ButValider_Click"
                    Content="Valider modifications"
                    FontSize="14"
                    Style="{StaticResource ValidateButtonStyle}" />
                <Button
                    x:Name="ButSuprimer"
                    Width="70"
                    Height="25"
                    Margin="20,0,0,0"
                    Click="ButSuprimer_Click"
                    Content="Suprimer"
                    FontSize="14"
                    Style="{StaticResource DeleteButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
