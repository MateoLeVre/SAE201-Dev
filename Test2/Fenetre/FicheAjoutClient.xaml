<Window
    x:Class="AppliNicolas.Fenetre.FicheAjoutClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppliNicolas.Fenetre"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FicheAjoutClient"
    Width="300"
    Height="250"
    WindowStyle="None"
    mc:Ignorable="d"
    Background="Beige" WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Button x:Name="ButRetour"
                Width="70"
                Height="20"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="⬅ Retour"
                Style="{StaticResource BoutonArrondi}" Click="ButRetour_Click" />
            <StackPanel Margin="0,35,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="45"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="Nom :"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TxtBoxNom"
                    Width="150"
                    Height="20"
                    Margin="30,0,0,0"
                    Text="" />
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="60"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="Prénom :"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TxtBoxPrenomClient"
                    Width="150"
                    Height="20"
                    Margin="15,0,0,0"
                    Text="" />
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="40"
                    Height="20"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="Mail :"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TxtBoxMailClient"
                    Width="150"
                    Height="20"
                    Margin="35,0,0,0"
                    Text="" />
            </StackPanel>
            <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                <Button x:Name="ButAjouter"
                    Width="150"
                    Margin="70,0,0,0"
                    Content="Ajouter"
                    FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButAjouter_Click" 
                    Style="{StaticResource ValidateButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>