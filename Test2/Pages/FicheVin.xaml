<UserControl x:Class="AppliNicolas.Pages.FicheVin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Beige">
    <ScrollViewer>
        <StackPanel Margin="30" Width="1328">

            <!-- Titre -->
            <TextBlock Text="Fiche de vin"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <!-- Partie Image, Infos, Détails répartie en stack panel horizontal puis vertical-->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Height="364">
                <Image Source="/Images/vin.jpg" Width="250" Height="330" Stretch="Uniform" />
                
                <!-- Infos-->
                <StackPanel Margin="30,0" Width="356" Height="335" >
                    <TextBlock Text="Esporao Reserva Tinto" FontSize="24" FontWeight="Bold" Margin="0,10,0,0" />
                    <TextBlock Text="Référence : E305TP12" FontSize="16" Margin="10,10,0,0" />
                    <TextBlock Text="Vin Rouge" FontSize="16" Margin="10,10,0,0" />
                    <TextBlock Text="Appelation : Bourgogne" FontSize="16" Margin="10,10,0,0" />
                    <TextBlock Text="Millésime : 2020" FontSize="16" Margin="10,10,0,0" />
                    <TextBlock Text="Stock : 12" FontSize="16" Margin="10,10,0,0" />
                    <TextBlock Text="Rayon : Millesime 2020 / Vin Rouge" FontSize="16" Margin="10,10,0,0" />
                    <TextBlock Text="Fournisseur : Domaine Esporao" FontSize="16" Margin="10,10,0,0" />
                    <TextBlock Text="Prix (€/u) : 19,20" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" />

                </StackPanel>
                
                <!-- Détail -->
                <StackPanel Width="601" Height="280">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="20" FontWeight="Bold" Margin="40,0,0,0"><Run Text="Detail :"/></TextBlock>
                        <StackPanel Orientation="Horizontal"  Margin="300,5,0,0">
                            <Ellipse Fill="Orange" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Nouveau" FontWeight="Bold" Foreground="Orange" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="14" Margin="20,35,0,10" Width="462"><Run Text="Ce vin rouge portugais d'exception provient du domaine renommé Esporao, situé dans la région de l'Alentejo. Le millésime 2020 se distingue par sa robe profonde rubis et ses arômes intenses de fruits noirs mûrs, de chocolat noir et d'épices douces. En bouche, l'équilibre est remarquable : des tanins soyeux, une belle structure et une finale persistante légèrement boisée. Ce vin a bénéficié d'un élevage en fûts de chêne pendant 12 mois, lui conférant complexité et rondeur."/></TextBlock>
                </StackPanel>
            </StackPanel>
            <Rectangle Stretch="Fill" Height="2" Stroke="#6E1414" Width="1250" Fill="Black" Margin="0,-10,0,20"/>


            <!-- Produits similaires -->
            <TextBlock Text="Produits similaires :" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" />

            <StackPanel>
                <!-- Nom des colonnes -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Produit" Width="150" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                    <TextBlock Text="Appelation" Width="150" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                    <TextBlock Text="Type" Width="100" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                    <TextBlock Text="Millésime" Width="100" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                    <TextBlock Text="Photo" Width="100" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                    <TextBlock Text="Stock" Width="100" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                    <TextBlock Text="Prix (€/u)" Width="100" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                    <TextBlock Text="Action" Width="100" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                </StackPanel>

                <!-- Ligne d'exemple -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Château Margaux" Width="150" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Margaux" Width="150" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Rouge" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="2018" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Image Source="/Images/vin.jpg" Width="80" Height="80" Margin="20,0"/>
                    <TextBlock Text="8" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="34,50" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="Voir la fiche" Width="99" Style="{StaticResource BoutonArrondi}" FontSize="14" Margin="20,0" Height="31"  />
                </StackPanel>

                <!-- Ligne d'exemple -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Château Margaux" Width="150" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Margaux" Width="150" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Rouge" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="2018" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Image Source="/Images/vin.jpg" Width="80" Height="80" Margin="20,0"/>
                    <TextBlock Text="8" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="34,50" Width="100" FontSize="16" Margin="20,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="Voir la fiche" Width="99" Style="{StaticResource BoutonArrondi}" FontSize="14" Margin="20,0" Height="31"  />
                </StackPanel>
                
                
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>