<UserControl x:Class="AppliNicolas.Pages.RechercheVin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Beige">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center">

            <!-- Titre -->
            <TextBlock Text="Recherche de vin"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <!-- Barre de recherche -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20" Height="40">
                <Border Background="#FFE5B4" CornerRadius="10" Padding="10" Width="1000" Height="40">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔍" VerticalAlignment="Center" FontSize="18" Margin="0,0,10,0"/>
                        <Border BorderThickness="1,1,1,1" BorderBrush="Black" Opacity="0.5">
                        <TextBox x:Name="TxtRecherche"
                                 Width="900"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="16"
                                 Text=""
                                 TextChanged="TxtRecherche_TextChanged"/>
                        </Border>
                    </StackPanel>
                </Border>

                <Button Style="{StaticResource BoutonArrondi}"
                    Content="Filtrer" Width="100" Height="40" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center">
            <!-- En tete -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Produit" Width="150" FontWeight="Bold" FontSize="16" />
                <TextBlock Text="Appelation" Width="150" FontWeight="Bold" FontSize="16" />
                <TextBlock Text="Type" Width="100" FontWeight="Bold" FontSize="16" />
                <TextBlock Text="Millésime" Width="100" FontWeight="Bold" FontSize="16" />
                <TextBlock Text="Photo" Width="100" FontWeight="Bold" FontSize="16" />
                <TextBlock Text="Stock" Width="100" FontWeight="Bold" FontSize="16" />
                <TextBlock Text="Prix (€/u)" Width="100" FontWeight="Bold" FontSize="16" />
                <TextBlock Text="Détail" Width="100" FontWeight="Bold" FontSize="16" />
            </StackPanel>

            <!-- Liste des recherches -->
            <ItemsControl x:Name="IC_Vins" ItemsSource="{Binding VinsFiltres}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{Binding Nom}" Width="150" FontSize="14" TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="{Binding Appelation}" Width="150" FontSize="14" />
                            <TextBlock Text="{Binding Type}" Width="100" FontSize="14" />
                            <TextBlock Text="{Binding Millesime}" Width="100" FontSize="14" />
                            <Image Source="{Binding Photo}" Width="80" Height="80" Margin="10,0" />
                            <TextBlock Text="{Binding Stock}" Width="100" FontSize="14" />
                            <TextBlock Text="{Binding Prix, StringFormat='{}{0:N2}'}" Width="100" FontSize="14" />

                            
                            <!-- Si nouveau -->
                            <StackPanel Orientation="Horizontal" Width="100">
                                <Ellipse Fill="Orange"
                                         Width="18"
                                         Height="18"
                                         VerticalAlignment="Center"
                                         Visibility="{Binding EstNouveau, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Margin="0,-10,5,0"/>
                                <TextBlock Text="Nouveau"
                                           Foreground="Orange"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding EstNouveau, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,-10,0,0"/>
                            </StackPanel>

                            
                            <Button Content="Voir la fiche"
                                    Style="{StaticResource BoutonArrondi}"
                                    Width="100"
                                    Height="30"
                                    Margin="10,0"
                                    Tag="{Binding}"
                                    Click="VoirFiche_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
