<UserControl
    x:Class="AppliNicolas.Pages.RechercheVin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Beige">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center">

            <!--  Titre  -->
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="32"
                FontWeight="Bold"
                Text="Recherche de vin" />

            <!--  Barre de recherche  -->
            <StackPanel
                Height="40"
                Margin="0,0,0,20"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    Width="1000"
                    Height="40"
                    Padding="10"
                    Background="#FFE5B4"
                    CornerRadius="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="🔍" />
                        <Border
                            BorderBrush="Black"
                            BorderThickness="1,1,1,1"
                            Opacity="0.5">
                            <TextBox
                                x:Name="TxtRecherche"
                                Width="900"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Text=""
                                TextChanged="TxtRecherche_TextChanged" />
                        </Border>
                    </StackPanel>
                </Border>

                <Button
                    Width="100"
                    Height="40"
                    Margin="10,0,0,0"
                    Content="Filtrer"
                    Style="{StaticResource BoutonArrondi}" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Center">
                <!--  En tete  -->
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <TextBlock
                        Width="150"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Produit" />
                    <TextBlock
                        Width="150"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Appelation" />
                    <TextBlock
                        Width="100"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Type" />
                    <TextBlock
                        Width="100"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Millésime" />
                    <TextBlock
                        Width="100"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Photo" />
                    <TextBlock
                        Width="100"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Prix (€/u)" />
                    <TextBlock
                        Width="100"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Détail" />
                </StackPanel>

                <!--  Liste des recherches  -->
                <ItemsControl x:Name="IC_Vins" ItemsSource="{Binding VinsFiltres}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <TextBlock
                                    Width="150"
                                    FontSize="14"
                                    Text="{Binding Nom}"
                                    TextTrimming="CharacterEllipsis" />
                                <TextBlock
                                    Width="150"
                                    FontSize="14"
                                    Text="{Binding AppelationVin}" />
                                <TextBlock
                                    Width="100"
                                    FontSize="14"
                                    Text="{Binding TypeVin}" />
                                <TextBlock
                                    Width="100"
                                    FontSize="14"
                                    Text="{Binding Millesime}" />
                                <Image
                                    Width="80"
                                    Height="80"
                                    Margin="10,0"
                                    Source="{Binding Photo}" />
                                <TextBlock
                                    Width="100"
                                    FontSize="14"
                                    Text="{Binding Prix, StringFormat='{}{0:N2}'}" />


                                <!--  Si nouveau  -->
                                <StackPanel Width="100" Orientation="Horizontal">
                                    <Ellipse
                                        Width="18"
                                        Height="18"
                                        Margin="0,-10,5,0"
                                        VerticalAlignment="Center"
                                        Fill="Orange"
                                        Visibility="{Binding EstNouveau, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock
                                        Margin="0,-10,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="Orange"
                                        Text="Nouveau"
                                        Visibility="{Binding EstNouveau, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </StackPanel>


                                <Button
                                    Width="100"
                                    Height="30"
                                    Margin="10,0"
                                    Click="VoirFiche_Click"
                                    Content="Voir la fiche"
                                    Style="{StaticResource BoutonArrondi}"
                                    Tag="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
