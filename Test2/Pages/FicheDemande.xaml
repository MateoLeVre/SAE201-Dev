<UserControl x:Class="AppliNicolas.Pages.FicheDemande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Beige"
             Padding="20">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Cursor="">
        
        <StackPanel Width="600" HorizontalAlignment="Center" >

            <Button Content="⬅ Retour"
        Width="100"
        Height="30"
        Margin="0,0,0,20"
        HorizontalAlignment="Left"
        Style="{StaticResource BoutonArrondi}"
        Click="Retour_Click"/>

            <TextBlock Text="Fiche de la demande"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />


            <!-- Infos de la demande-->
            <GroupBox Header="Informations sur la demande" FontWeight="Bold" Margin="0,0,0,20" Padding="15">
                <StackPanel>
                    <TextBlock Text="{Binding NumDemande, StringFormat=Numéro : {0}}" FontSize="16" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding DateDemande, StringFormat=Date : {0:dd/MM/yyyy}}" FontSize="16" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding NumEmploye, StringFormat=Référence client : {0}}" FontSize="16" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding QuantiteDemande, StringFormat=Quantité commandée : {0}}" FontSize="16" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding MontantTotal, StringFormat=Montant total : {0:N2} €}" FontSize="16" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding EtatDemandeToString, StringFormat=État : {0}}" FontSize="16" Margin="0,0,0,5" />
                </StackPanel>
            </GroupBox>

            <!-- Infos du vin-->
            <GroupBox Header="Informations sur le vin" FontWeight="Bold" Padding="15">
                <StackPanel>
                    <TextBlock Text="{Binding Vin.Nom}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Vin.Detail}" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Vin.Prix, StringFormat=Prix (€/u) : {0:N2} }" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Voir fiche du vin"
                                Width="150"
                                Height="35"
                                Style="{StaticResource BoutonArrondi}"
                                Click="VoirFicheVin_Click" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
